@page
@model ADProxy.Pages.Error

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Error</title>
</head>
<body>
<div style="padding: 2rem; font-family: Segoe UI, Arial, sans-serif;">
    <h1>An error occurred</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorId))
    {
        <p><strong>Error ID:</strong> @Model.ErrorId</p>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorJson))
    {
        <h2>Details</h2>
        <pre style="background:#f5f5f5;padding:1rem;border-radius:4px;">@Model.ErrorJson</pre>
    }
    else
    {
        <p>No further details are available.</p>
    }

    <p><a href="/">Return to home</a></p>
</div>
</body>
</html>